---
import { getCollection } from "astro:content";
import App from "../../layouts/App.astro";
import BadgeMini from "../../components/BadgeMini.astro";
import HpCard from "../../components/HpCard.astro";
import HpStage from "../../components/HpStage.astro";
import EventsSection from "../../components/EventsSection.astro";
import EventCardCompact from "../../components/EventCardCompact.astro";
import FormattedDate from "../../components/FormattedDate.astro";
import allshortevents from "../../data/shortevents.json";
import NextMatch from "../../components/NextMatch.astro";

const now = new Date().setHours(0, 0, 0, 0);
const threeMonthsAgo = new Date();
threeMonthsAgo.setMonth(threeMonthsAgo.getMonth() - 3);
threeMonthsAgo.setHours(0, 0, 0, 0);

const dateInPast = (date: Date) =>
  new Date(date).setHours(0, 0, 0, 0) >= now;

const isRecentPast = (date: Date) => {
  const d = new Date(date).setHours(0, 0, 0, 0);
  return d < now && d >= threeMonthsAgo.getTime();
};

const allEvents = (await getCollection("veranstaltungen")).filter((ev) => ev.data.pubDate <= new Date() && !ev.data.hidden);

const futureEvents = allEvents.filter((ev) => dateInPast(ev.data.eventDate)).sort(
  (a, b) => a.data.eventDate.valueOf() - b.data.eventDate.valueOf(),
);

const recentPastEvents = allEvents.filter((ev) => isRecentPast(ev.data.eventDate)).sort(
  (a, b) => b.data.eventDate.valueOf() - a.data.eventDate.valueOf(),
);

const currentYear = new Date().getFullYear();
const pastEvents = (await getCollection("berichte"))
  .filter((ev) => {
    const eventYear = ev.data.eventDate.getFullYear();
    return eventYear === currentYear || eventYear === currentYear - 1;
  })
  .sort(
    (a, b) => a.data.eventDate.valueOf() - b.data.eventDate.valueOf(),
  ).reverse();

const shortevents = allshortevents.geplant.filter((ev) => dateInPast(new Date(ev.date))).sort(
	(a, b) => new Date(a.date).valueOf() -  new Date(b.date).valueOf()
)
const title = "Veranstaltungen - SCO-OGV Oberfüllbach";
const description =
  "Überblick über alle Veranstaltungen des SCO-OGV Oberfüllbach";
---

<App title={title} description={description}>
  <HpStage image="/src/media/buehne-events.jpg" blurred="data:image/webp;base64," title="Veranstaltungen" />
  <div class="main container grid gap-4 mx-auto p-4 overflow-hidden">
    <!-- Regeltermine -->
    <aside class="sidebar1 flex flex-col gap-4">
      <NextMatch />
      <HpCard>
        <div class="flex gap-2 justify-between items-center" slot="title">
          <h2 class="font-bold">Regeltermine</h2>
        </div>
        <table>
          <tr>
            <td>
              <BadgeMini>
                <span class="font-semibold">So: ab 18:00 Uhr</span>
              </BadgeMini></td
            >
            <td>Steel-Darts</td>
          </tr>
          <tr>
            <td
              ><BadgeMini>
                <span class="font-semibold">So: ab 18:30 Uhr</span>
              </BadgeMini></td
            >
            <td>Stammtisch</td>
          </tr>
        </table>
      </HpCard>
    </aside>
    <!-- / Regeltermine -->

    <!-- Vorschau -->
        {
          shortevents.length > 0 && (
    <aside class="sidebar2">
      <HpCard>
        <div class="flex gap-2 justify-between items-center" slot="title">
          <h2 class="font-bold">Vorschau</h2>
        </div>
            <ul class="whitespace-nowrap">
              {
                shortevents.map((event) => (
                <li>
                  <div class="inline-flex flex-row gap-2 overflow-hidden max-w-full block py-2">
                    <BadgeMini>
                      <span class="font-semibold"><span class="day">{new Date(event.date).toLocaleDateString("de-DE", { weekday: 'short' })},</span><span><FormattedDate date={new Date(event.date)} /></span></span>
                    </BadgeMini>
                    <span class="overflow-hidden text-ellipsis">{event.title}</span>
                  </div>
                </li>
              ))
              }
            </ul>
      </HpCard>
    </aside>
          )
        }	
    <!-- / Vorschau -->
    <main class="content">
      <section>
        <EventsSection data={futureEvents} />
      </section>
      
      {recentPastEvents.length > 0 && (
        <hr class="my-8">
        <section>
          <h2 class="text-xl font-bold mb-4">Vergangene Veranstaltungen (letzte 3 Monate)</h2>
          <EventCardCompact data={recentPastEvents} isPast={true} />
        </section>
      )}

      {(futureEvents.length > 0 || recentPastEvents.length > 0) && <hr class="my-8">} 
      <section>
        <h2 class="text-xl font-bold mb-4">Berichte</h2>
        <EventsSection data={pastEvents} path="berichte" />
      </section>
    </main>
  </div>
</App>

<style>
  td {
    padding: .5em 0;
    padding-right: 1em;
  }
  .day {
    display: inline-block;
    width: 3ch;
  }
  ul {
    list-style-type: none;
    padding: unset;
  }
  ul li {
    display: flex;
  }
  section {
    @apply container mx-auto;
  }


	@media (max-width:767px) {
		.main {
			grid-area: main;
			display: flex;
			flex-direction: column;
		}
	}
	@media (min-width: 768px) {
		.main {
			grid-area: main;
			grid-template-areas:
			  "content side1"
			  "content side2";
      grid-template-columns: minmax(0, 6fr) minmax(0, 4fr);
			grid-template-rows: auto 1fr;
		}
		.content {
			grid-area: content;
		}
		.side1 {
			grid-area: side1;
		}
		.side2 {
			grid-area: side2;
		}
	}
		
	@media (min-width: 1280px) {
		.main {
			grid-template-columns: minmax(0, 4fr) minmax(0, 2fr);
		}
	}
</style>
