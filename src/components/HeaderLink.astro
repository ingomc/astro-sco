---
import type { HTMLAttributes } from "astro/types";

type Props = HTMLAttributes<"a">;

const { href, class: className, ...props } = Astro.props;

const { pathname } = Astro.url;
const isActive = href && pathname.includes(href.toString());
---

<a href={href} class:list={[className, { active: isActive }]} {...props}>
  <slot />
</a>
<style>
  a {
    @apply inline-flex items-center rounded-full px-4 py-1 font-bold uppercase hover:bg-slate-100;
  }
  a.active {
	@apply bg-red-700 font-bold text-neutral-200
  }
</style>
