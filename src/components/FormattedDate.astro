---
interface Props {
  date: Date;
  time?: boolean;
}

const { date, time } = Astro.props;
const formattedDate = new Date(date);
---

{
  time ? (
    <time datetime={formattedDate.toLocaleDateString("de-de")}>
      {formattedDate.toLocaleDateString("de-de", {
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
		hour: "2-digit",
		minute: "2-digit"
      })}
    </time>
  ) : (
    <time datetime={formattedDate.toLocaleDateString("de-de")}>
      {formattedDate.toLocaleDateString("de-de", {
        year: "numeric",
        month: "2-digit",
        day: "2-digit",
      })}
    </time>
  )
}
